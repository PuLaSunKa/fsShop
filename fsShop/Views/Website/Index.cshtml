    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaTheLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNhanHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
