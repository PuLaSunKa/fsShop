                        <li><i class="fa fa-envelope-o"></i> 123123123</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="contact_message form">
                    <h3>Gửi Cho Chúng Tôi Câu Hỏi Của Bạn</h3>
                    <form id="contact-form" method="POST" action="assets/mail.php">
                        <p>
                            <label> Họ Tên (Bắt buộc)</label>
                            <input name="name" placeholder="Họ tên *" type="text">
                        </p>
                        <p>
                            <label>  Email (Bắt buộc)</label>
                            <input name="email" placeholder="Email *" type="email">
                        </p>
                        <p>
                            <label>  Vấn Đề</label>
                            <input name="subject" placeholder="Vấn đề *" type="text">
                        </p>
                        <div class="contact_textarea">
                            <label>  Lời Nhắn</label>
                            <textarea placeholder="Lời nhắn *" name="message" class="form-control2"></textarea>
                        </div>
                        <button type="submit"> Gửi</button>
                        <p class="form-messege"></p>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<!--contact area end-->
